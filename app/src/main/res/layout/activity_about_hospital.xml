<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/purple"
    android:layout_height="match_parent"
    tools:context=".aboutHospital">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">'
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hos"/>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="
The hospital will remain open until 9 p.m. and will open at 10 a.m. in the morning. We have specialists for all diseases in our hospital."
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:layout_marginTop="30dp"
        android:text="go and get appointment"
        android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/image"
            android:layout_marginTop="30dp"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/arr"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>